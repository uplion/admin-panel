generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id              Int       @id @default(autoincrement())
  key             String
  name            String
  description     String?
  createdAt       DateTime  @default(now())
  isQuotaLimited  Boolean
  remainingTokens Int?
  isEnabled       Boolean   @default(true)
  expiresAt       DateTime?
  allowedModels   String[]

  @@index([key])
}

model AiModel {
  id        Int       @id @default(autoincrement())
  type      ModelType
  name      String
  modelName String
  baseUrl   String?
  apiToken  String?

  @@index([name])
}

enum ModelType {
  local
  remote
}
